<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.FocusApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/focus_primary</item>
        <item name="colorOnPrimary">@color/focus_on_primary</item>
        <item name="colorPrimaryContainer">@color/focus_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/focus_on_primary_container</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/focus_secondary</item>
        <item name="colorOnSecondary">@color/focus_on_secondary</item>
        <item name="colorSecondaryContainer">@color/focus_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/focus_on_secondary_container</item>
        
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/focus_tertiary</item>
        <item name="colorOnTertiary">@color/focus_on_tertiary</item>
        <item name="colorTertiaryContainer">@color/focus_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/focus_on_tertiary_container</item>
        
        <!-- Error color. -->
        <item name="colorError">@color/focus_error</item>
        <item name="colorOnError">@color/focus_on_error</item>
        <item name="colorErrorContainer">@color/focus_error_container</item>
        <item name="colorOnErrorContainer">@color/focus_on_error_container</item>
        
        <!-- Background color. -->
        <item name="colorBackground">@color/focus_background</item>
        <item name="colorOnBackground">@color/focus_on_background</item>
        
        <!-- Surface color. -->
        <item name="colorSurface">@color/focus_surface</item>
        <item name="colorOnSurface">@color/focus_on_surface</item>
        <item name="colorSurfaceVariant">@color/focus_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/focus_on_surface_variant</item>
        
        <!-- Outline color. -->
        <item name="colorOutline">@color/focus_outline</item>
        <item name="colorOutlineVariant">@color/focus_outline_variant</item>
        
        <!-- Inverse colors. -->
        <item name="colorInverseSurface">@color/focus_inverse_surface</item>
        <item name="colorInverseOnSurface">@color/focus_inverse_on_surface</item>
        <item name="colorInversePrimary">@color/focus_inverse_primary</item>
        
        <!-- Scrim color. -->
        <item name="colorScrim">@color/focus_scrim</item>
        
        <!-- Status bar and navigation bar colors. -->
        <item name="android:statusBarColor">@color/focus_surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/focus_surface</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Window background. -->
        <item name="android:windowBackground">@color/focus_background</item>
        
        <!-- Text appearance. -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.FocusApp.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.FocusApp.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.FocusApp.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.FocusApp.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.FocusApp.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.FocusApp.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.FocusApp.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.FocusApp.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.FocusApp.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.FocusApp.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.FocusApp.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.FocusApp.LabelSmall</item>
        
        <!-- Shape appearance. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.FocusApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.FocusApp.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.FocusApp.LargeComponent</item>
        
        <!-- Button styles. -->
        <item name="materialButtonStyle">@style/Widget.FocusApp.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.FocusApp.Button.OutlinedButton</item>
        <item name="materialButtonToggleGroupStyle">@style/Widget.FocusApp.Button.ToggleButton</item>
        
        <!-- Card styles. -->
        <item name="materialCardViewStyle">@style/Widget.FocusApp.CardView</item>
        
        <!-- Text field styles. -->
        <item name="textInputStyle">@style/Widget.FocusApp.TextInputLayout</item>
        
        <!-- Chip styles. -->
        <item name="materialChipStyle">@style/Widget.FocusApp.Chip</item>
        <item name="materialChipFilterStyle">@style/Widget.FocusApp.Chip.Filter</item>
        <item name="materialChipInputStyle">@style/Widget.FocusApp.Chip.Input</item>
        
        <!-- Switch styles. -->
        <item name="switchStyle">@style/Widget.FocusApp.CompoundButton.Switch</item>
        
        <!-- Checkbox styles. -->
        <item name="checkboxStyle">@style/Widget.FocusApp.CompoundButton.CheckBox</item>
        
        <!-- RadioButton styles. -->
        <item name="radioButtonStyle">@style/Widget.FocusApp.CompoundButton.RadioButton</item>
        
        <!-- Slider styles. -->
        <item name="sliderStyle">@style/Widget.FocusApp.Slider</item>
        
        <!-- Progress indicator styles. -->
        <item name="progressBarStyle">@style/Widget.FocusApp.LinearProgressIndicator</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.FocusApp.CircularProgressIndicator</item>
        
        <!-- Divider styles. -->
        <item name="dividerStyle">@style/Widget.FocusApp.Divider</item>
        
        <!-- Navigation rail styles. -->
        <item name="navigationRailStyle">@style/Widget.FocusApp.NavigationRailView</item>
        
        <!-- Bottom navigation styles. -->
        <item name="bottomNavigationStyle">@style/Widget.FocusApp.BottomNavigationView</item>
        
        <!-- Tab styles. -->
        <item name="tabStyle">@style/Widget.FocusApp.TabLayout</item>
        <item name="tabSecondaryStyle">@style/Widget.FocusApp.TabLayout.Secondary</item>
        
        <!-- Top app bar styles. -->
        <item name="toolbarStyle">@style/Widget.FocusApp.Toolbar</item>
        <item name="actionBarStyle">@style/Widget.FocusApp.ActionBar</item>
        
        <!-- Search bar styles. -->
        <item name="searchBarStyle">@style/Widget.FocusApp.SearchBar</item>
        <item name="searchViewStyle">@style/Widget.FocusApp.SearchView</item>
        
        <!-- Dialog styles. -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.FocusApp.MaterialAlertDialog</item>
        
        <!-- Bottom sheet styles. -->
        <item name="bottomSheetStyle">@style/Widget.FocusApp.BottomSheet</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.FocusApp.BottomSheetDialog</item>
        
        <!-- Time picker styles. -->
        <item name="timePickerStyle">@style/Widget.FocusApp.TimePicker</item>
        
        <!-- Date picker styles. -->
        <item name="datePickerStyle">@style/Widget.FocusApp.DatePicker</item>
        
        <!-- Badge styles. -->
        <item name="badgeStyle">@style/Widget.FocusApp.Badge</item>
        
        <!-- Extended floating action button styles. -->
        <item name="extendedFloatingActionButtonStyle">@style/Widget.FocusApp.ExtendedFloatingActionButton</item>
        
        <!-- Floating action button styles. -->
        <item name="floatingActionButtonStyle">@style/Widget.FocusApp.FloatingActionButton</item>
        
        <!-- Snackbar styles. -->
        <item name="snackbarStyle">@style/Widget.FocusApp.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.FocusApp.Snackbar.TextView</item>
        <item name="snackbarButtonStyle">@style/Widget.FocusApp.Snackbar.Button</item>
        
    </style>

    <!-- Text styles -->
    <style name="TextAppearance.FocusApp.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">400</item>
        <item name="fontSize">32sp</item>
        <item name="lineHeight">40sp</item>
        <item name="letterSpacing">0</item>
    </style>

    <style name="TextAppearance.FocusApp.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">400</item>
        <item name="fontSize">28sp</item>
        <item name="lineHeight">36sp</item>
        <item name="letterSpacing">0</item>
    </style>

    <style name="TextAppearance.FocusApp.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">400</item>
        <item name="fontSize">24sp</item>
        <item name="lineHeight">32sp</item>
        <item name="letterSpacing">0</item>
    </style>

    <style name="TextAppearance.FocusApp.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">400</item>
        <item name="fontSize">22sp</item>
        <item name="lineHeight">28sp</item>
        <item name="letterSpacing">0</item>
    </style>

    <style name="TextAppearance.FocusApp.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">500</item>
        <item name="fontSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="letterSpacing">0.15</item>
    </style>

    <style name="TextAppearance.FocusApp.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">500</item>
        <item name="fontSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="letterSpacing">0.1</item>
    </style>

    <style name="TextAppearance.FocusApp.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">400</item>
        <item name="fontSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="letterSpacing">0.5</item>
    </style>

    <style name="TextAppearance.FocusApp.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">400</item>
        <item name="fontSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="letterSpacing">0.25</item>
    </style>

    <style name="TextAppearance.FocusApp.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">400</item>
        <item name="fontSize">12sp</item>
        <item name="lineHeight">16sp</item>
        <item name="letterSpacing">0.4</item>
    </style>

    <style name="TextAppearance.FocusApp.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">500</item>
        <item name="fontSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="letterSpacing">0.1</item>
    </style>

    <style name="TextAppearance.FocusApp.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">500</item>
        <item name="fontSize">12sp</item>
        <item name="lineHeight">16sp</item>
        <item name="letterSpacing">0.5</item>
    </style>

    <style name="TextAppearance.FocusApp.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">500</item>
        <item name="fontSize">11sp</item>
        <item name="lineHeight">16sp</item>
        <item name="letterSpacing">0.5</item>
    </style>

    <!-- Shape styles -->
    <style name="ShapeAppearance.FocusApp.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.FocusApp.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.FocusApp.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Widget styles -->
    <style name="Widget.FocusApp.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/focus_on_primary</item>
        <item name="backgroundTint">@color/focus_primary</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <style name="Widget.FocusApp.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/focus_primary</item>
        <item name="strokeColor">@color/focus_outline</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <style name="Widget.FocusApp.Button.ToggleButton" parent="Widget.Material3.Button.ToggleButton">
        <item name="android:textColor">@color/focus_primary</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <style name="Widget.FocusApp.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/focus_surface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/focus_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.FocusApp.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/focus_outline</item>
        <item name="boxBackgroundColor">@color/focus_surface</item>
        <item name="hintTextColor">@color/focus_secondary</item>
        <item name="android:textColorHint">@color/focus_tertiary</item>
    </style>

    <style name="Widget.FocusApp.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/focus_primary_container</item>
        <item name="android:textColor">@color/focus_on_primary_container</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <style name="Widget.FocusApp.CompoundButton.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/focus_primary</item>
    </style>

    <style name="Widget.FocusApp.CompoundButton.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/focus_primary</item>
    </style>

    <style name="Widget.FocusApp.CompoundButton.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/focus_primary</item>
        <item name="trackTint">@color/focus_primary_container</item>
    </style>

    <style name="Widget.FocusApp.Slider" parent="Widget.Material3.Slider">
        <item name="thumbColor">@color/focus_primary</item>
        <item name="trackColorActive">@color/focus_primary</item>
        <item name="trackColorInactive">@color/focus_primary_container</item>
    </style>

    <style name="Widget.FocusApp.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackColor">@color/focus_primary_container</item>
        <item name="indicatorColor">@color/focus_primary</item>
    </style>

    <style name="Widget.FocusApp.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="trackColor">@color/focus_primary_container</item>
        <item name="indicatorColor">@color/focus_primary</item>
    </style>

    <style name="Widget.FocusApp.Divider" parent="Widget.Material3.Divider">
        <item name="color">@color/focus_outline</item>
    </style>

    <style name="Widget.FocusApp.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/focus_surface</item>
        <item name="titleTextColor">@color/focus_on_surface</item>
        <item name="navigationIconTint">@color/focus_on_surface</item>
    </style>

    <style name="Widget.FocusApp.ActionBar" parent="Widget.Material3.ActionBar">
        <item name="android:background">@color/focus_surface</item>
        <item name="titleTextColor">@color/focus_on_surface</item>
    </style>

    <style name="Widget.FocusApp.SearchBar" parent="Widget.Material3.SearchBar">
        <item name="android:background">@color/focus_surface</item>
        <item name="android:textColor">@color/focus_on_surface</item>
        <item name="android:textColorHint">@color/focus_on_surface_variant</item>
    </style>

    <style name="Widget.FocusApp.SearchView" parent="Widget.Material3.SearchView">
        <item name="android:background">@color/focus_surface</item>
        <item name="android:textColor">@color/focus_on_surface</item>
        <item name="android:textColorHint">@color/focus_on_surface_variant</item>
    </style>

    <style name="ThemeOverlay.FocusApp.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/focus_surface</item>
        <item name="android:textColor">@color/focus_on_surface</item>
        <item name="android:textColorPrimary">@color/focus_on_surface</item>
        <item name="android:textColorSecondary">@color/focus_on_surface_variant</item>
    </style>

    <style name="Widget.FocusApp.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="android:background">@color/focus_surface</item>
        <item name="android:textColor">@color/focus_on_surface</item>
    </style>

    <style name="ThemeOverlay.FocusApp.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:background">@color/focus_surface</item>
        <item name="android:textColor">@color/focus_on_surface</item>
    </style>

    <style name="Widget.FocusApp.TimePicker" parent="Widget.Material3.TimePicker">
        <item name="android:background">@color/focus_surface</item>
        <item name="android:textColor">@color/focus_on_surface</item>
    </style>

    <style name="Widget.FocusApp.DatePicker" parent="Widget.Material3.DatePicker">
        <item name="android:background">@color/focus_surface</item>
        <item name="android:textColor">@color/focus_on_surface</item>
    </style>

    <style name="Widget.FocusApp.Badge" parent="Widget.Material3.Badge">
        <item name="backgroundColor">@color/focus_primary</item>
        <item name="android:textColor">@color/focus_on_primary</item>
    </style>

    <style name="Widget.FocusApp.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="backgroundTint">@color/focus_primary</item>
        <item name="android:textColor">@color/focus_on_primary</item>
        <item name="iconTint">@color/focus_on_primary</item>
    </style>

    <style name="Widget.FocusApp.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/focus_primary</item>
        <item name="tint">@color/focus_on_primary</item>
    </style>

    <style name="Widget.FocusApp.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="android:background">@color/focus_inverse_surface</item>
        <item name="android:textColor">@color/focus_inverse_on_surface</item>
    </style>

    <style name="Widget.FocusApp.Snackbar.TextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">@color/focus_inverse_on_surface</item>
    </style>

    <style name="Widget.FocusApp.Snackbar.Button" parent="Widget.Material3.Snackbar.Button">
        <item name="android:textColor">@color/focus_inverse_primary</item>
    </style>

</resources>